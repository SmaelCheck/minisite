{
    "name": "minisite",
    "version": "1.0.0",
    "description": "Un mini site d'introduction sur ReactJS",
    "main": "index.js",
    "scripts": {
        "start": "npm run build",
        "build": "webpack -d && cp src/index.html dist/index.html && webpack-dev-server --content-base src/  --inline --hot",
        "build:prod": "webpack -p && cp src/index.html dist/index.html"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SmaelCheck/minisite.git"
    },
    "author": "Smael CHECK",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/SmaelCheck/minisite/issues"
    },
    "homepage": "https://github.com/SmaelCheck/minisite#readme",
    "dependencies": {
        "babel-core": "^6.25.0",
        "react": "^15.6.1",
        "react-dom": "^15.6.1",
        "webpack": "^3.4.0"
    },
    "devDependencies": {
        "babel-loader": "^7.1.1",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "style-loader": "^0.18.2",
        "webpack-dev-server": "^2.6.1"
    }
}
